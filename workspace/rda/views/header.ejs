                <a href="/menu/about">About</a>
                <a href="/menu/contact">Contact</a>
                <a href="javascript:void(0);" onclick="helpHandler();">Help</a>
            </div>
        </div>
        <div class="translation">

            <button id="translate-btn"></button>

        </div>
    </div>

</header>

<script>
    let eng = `<span class="sm-title">Sookmyung Women's University</span>`
    let eng2 = "Agricultural Genetic Resource Analysis";
    let kor = `<span class="sm-title">숙명여자대학교</span>`
    let kor2 = "농업유전자원 분석 플랫폼";
    //localstorage 데이터 
    if (document.body.data.isEng) {
        document.getElementById("sm-title").innerHTML = eng;
        document.getElementById("platform-title").innerHTML = eng2;
        document.getElementById("translate-btn").innerHTML = "한글 번역";
    }
    else {
        document.getElementById("sm-title").innerHTML = kor;
        document.getElementById("platform-title").innerHTML = kor2;
        document.getElementById("translate-btn").innerHTML = "English";
    }
    var btn = document.querySelector('#translate-btn');
    //번역 버튼 클릭시,
    btn.addEventListener('click', function transEvent() {
        document.body.data.isEng = !document.body.data.isEng;
        document.getElementById('translate-btn').innerHTML = document.body.data.isEng ? "한글 번역" : "English";
        if (document.body.data.isEng) {
            document.getElementById("sm-title").innerHTML = eng;
            document.getElementById("platform-title").innerHTML = eng2;
        }
        else {
            document.getElementById("sm-title").innerHTML = kor;
            document.getElementById("platform-title").innerHTML = kor2;
        }
        window.localStorage.setItem("translation", JSON.stringify({ isEng: document.body.data.isEng }))
    })
    function helpHandler() {
        document.querySelector('footer').scrollIntoView();
    }
</script>